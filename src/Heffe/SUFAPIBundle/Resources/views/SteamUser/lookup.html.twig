{# src/Heffe/SUFAPIBundle/Resources/views/SteamUser/lookup.html.twig #}

{% extends "HeffeSUFAPIBundle:Default:layout.html.twig" %}

{% block body %}
    <div class="jumbotron">
        {% if errors|length > 0 %}
            <div class="alert alert-danger">
                <strong>Lookup failed:</strong> {{ errors[0] }}
            </div>
        {% endif %}
        <form class="form-horizontal" role="form" action="{{ path('heffe_sufapi_lookupuser') }}" method="post">
            <div class="form-group">
                <label class="col-sm-2 control-label" for="query">Query</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="query" id="query" placeholder="SteamId, Steam Profile URL, Vanity URL" autocomplete="off"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-1">
                    <button type="submit" class="btn btn-success">Lookup</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}